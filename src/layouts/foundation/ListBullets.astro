---
const { items = [] } = Astro.props;
---

<div class="container">
	<ul class="bullet-list">
		{items.map((item: any) => (
		<li class="bullet-list__item flex gx-md-3">
			<span class="bullet-list__icon fa-solid fa-sharp fa-check"></span>
			<div class="bullet-list__content grid md:grid-col-4-8 md:gx-md-3 lg:gx-lg-5">
				<span class="bullet-list__heading subheading mb-xs-5">{item.title}</span>
				<span class="bullet-list__description">{item.description}</span>
			</div>
		</li>
		))}
	</ul>
</div>