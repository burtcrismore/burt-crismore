---
import "@styles/components/_card.scss";
import "@styles/components/_image.scss";
import CardDefault from "./CardDefault.astro";
import CardRecommendation from "./CardRecommendation.astro";

const { content } = Astro.props;
const variant = content.variant ?? "default";

const componentMap = {
	default: CardDefault,
	recommendations: CardRecommendation,
};

const VariantComponent = componentMap[variant as keyof typeof componentMap] ?? CardDefault;
---

<VariantComponent content={content} />

<script src="@scripts/components/card.js"></script>